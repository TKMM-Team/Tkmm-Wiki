{
  "build": {
    "sitemap": {
      "baseUrl": "https://tkmm.org",
      "priority": 1.0,
      "changefreq": "weekly"
    },
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**",
          "favicon.ico",
          "logo.png",
          "logo.svg"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/custom"
    ],
    "globalMetadata": {
      "_appName": "TotK Mod Manager",
      "_appTitle": "TKMM",
      "_enableSearch": true,
      "_appLogoPath": "logo.png",
      "_appFaviconPath": "favicon.ico",
      "_appFooter": "<footer id=\"copyright\">(c) TKMM-Team and Contributors under the MIT License</footer>",
      "pdf": true
    },
    "postProcessors": [
      "ExtractSearchIndex"
    ]
  }
}
