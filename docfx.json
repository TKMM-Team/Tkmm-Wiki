{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "templates/minimal"
    ],
    "globalMetadata": {
      "_appName": "tkmm-wiki",
      "_appTitle": "TKMM Wiki Home",
      "_enableSearch": true,
      "_appLogoPath": "images/icon.png",
      "_appFaviconPath": "images/icon.ico",
      "pdf": true
    }
  }
}